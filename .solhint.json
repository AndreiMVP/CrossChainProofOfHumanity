{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", ">=0.8.0"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "not-rely-on-time": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "reason-string": "off",
    "var-name-mixedcase": "off",
    "func-name-mixedcase": "off",
    "max-states-count": "off"
  }
}
